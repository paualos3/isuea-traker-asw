<p id="notice"><%= notice %></p>

<p>
  <strong>Issue: </strong>
  <%= @issue.issue %>

</p>

<p>
  <strong>Description:</strong>
  <%= @issue.description %>
  
</p>

<p>
  <strong>User:</strong>
  <%= @issue.user %>
</p>

<p><%if @issue.open %> <notice:"Issue is open">
  <%end%> </p>
<p>
  <strong>Created:</strong>
  <%= @issue.created_at %>
</p>

<p>
  <strong>Last Update:</strong>
  <%= @issue.updated_at %>
</p>

  <%= link_to 'Edit', edit_issue_path(@issue) %> |
  <%= link_to 'Back', issues_path %>
  
<h2>Comments:</h2>

<table>
  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.content %></td>
      </tr>
    <% end %>
  </tbody>    
</table>
