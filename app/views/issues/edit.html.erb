-->
<%= render 'form', issue: @issue %>

<%= link_to 'Show', @issue %> |
<%= link_to 'Back', issues_path %> |

<% if @issue.isOpened()   %>
    <%= link_to 'Close Issue',  closeIssue_path(:id=>@issue.id) %>
<% end  %>

<% if !@issue.isOpened()  %>
    <%= link_to 'Open Issue',  openIssue_path(:id=>@issue.id) %>
<% end  %>
